<html>
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="./css/normalize.css">
  <link rel="stylesheet" href="./css/style.css">
</head>

<body>
  <header>
    <h1>ツイート一覧</h1>
    <p><%= notice %></p>
  </header>

  <footer>
    <table>
      <tr>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
        <td><%= link_to "ツイートを編集する", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'ツイートを削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
      <% end %>
    </table>
  </footer>

<br>
<%= link_to '新しくツイートを投稿する', new_post_path %>

</body>
</html>

